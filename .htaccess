# ====================================
# Block Bad Bots
# ====================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_USER_AGENT} ^.*(bot|crawl|spider).*$ [NC]
    RewriteCond %{HTTP_USER_AGENT} !(googlebot|bingbot|yandex) [NC]
    RewriteRule .* - [F,L]
</IfModule>










